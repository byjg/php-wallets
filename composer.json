{
  "name": "byjg/wallets",
  "description": "A robust PHP library for managing digital wallets and financial transactions with full audit trails, transaction chain integrity, and support for reserved funds.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "require": {
    "ext-pdo": "*",
    "ext-openssl": "*",
    "php": ">=8.1 <8.4",
    "byjg/micro-orm": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "ByJG\\AccountStatements\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "byjg/migration": "^5.0",
    "vimeo/psalm": "^5.9"
  }
}
