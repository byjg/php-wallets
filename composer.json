{
  "name": "byjg/wallets",
  "description": "A robust PHP library for managing digital wallets and financial transactions with full audit trails, transaction chain integrity, and support for reserved funds.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "require": {
    "ext-pdo": "*",
    "ext-openssl": "*",
    "php": ">=8.3 <8.6",
    "byjg/micro-orm": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "ByJG\\Wallets\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5|^11.5",
    "byjg/migration": "^6.0",
    "vimeo/psalm": "^5.9|^6.13"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --threads=1"
  }
}
